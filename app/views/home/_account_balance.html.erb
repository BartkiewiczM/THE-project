<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

<div class="bg-white shadow rounded-lg p-6 mb-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- First Component: Monthly Expenses -->
    <div>
      <!-- Flex container for the values -->
      <h2 class="text-sm font-semibold text-gray-800">Monthly Expenses</h2>
      <div style="font-family: 'Roboto', sans-serif;">

        <!-- Flex container for the values -->
        <div class="flex items-baseline space-x-2 mt-2">
          <p class="text-4xl text-gray-800">300$</p>
          <p class="text-2xl text-gray-600">/ 400$</p>
        </div>
      </div>

    </div>

    <!-- Second Component: Mocked Ring Chart with Legend -->
    <div class="flex items-center">
      <!-- Mocked Ring Chart -->
      <div class="relative">
        <!-- Outer Ring -->
        <svg class="w-24 h-24" viewBox="0 0 32 32">
          <!-- Background circle -->
          <circle class="text-gray-300" stroke-width="8" stroke="currentColor" fill="transparent" r="16" cx="16" cy="16" />
          <!-- Tools (60%) -->
          <circle class="text-blue-500" stroke-width="8" stroke-dasharray="60 40" stroke-dashoffset="0" stroke="currentColor" fill="transparent" r="16" cx="16" cy="16" />
          <!-- Entertainment (30%) -->
          <circle class="text-green-500" stroke-width="8" stroke-dasharray="30 70" stroke-dashoffset="-60" stroke="currentColor" fill="transparent" r="16" cx="16" cy="16" />
          <!-- Toys (10%) -->
          <circle class="text-gray-500" stroke-width="8" stroke-dasharray="10 90" stroke-dashoffset="-90" stroke="currentColor" fill="transparent" r="16" cx="16" cy="16" />
        </svg>
        <!-- Percentage in the center of the ring -->
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-lg font-semibold text-gray-800">60%</span>
        </div>
      </div>

      <!-- Legend -->
      <div class="ml-6">
        <div class="flex items-center mb-2">
          <span class="inline-block w-4 h-4 bg-blue-500 mr-2 rounded-full"></span>
          <span class="text-sm text-gray-800">60% Tools</span>
        </div>
        <div class="flex items-center mb-2">
          <span class="inline-block w-4 h-4 bg-green-500 mr-2 rounded-full"></span>
          <span class="text-sm text-gray-800">30% Entertainment</span>
        </div>
        <div class="flex items-center">
          <span class="inline-block w-4 h-4 bg-gray-500 mr-2 rounded-full"></span>
          <span class="text-sm text-gray-800">10% Toys</span>
        </div>
      </div>
    </div>
  </div>
</div>
