<% content_for :head do %>
  <style>
      :root {
          --primary-color: #3fb56b;
          --primary-color-dark: #2d6a4f;
          --secondary-color: #009bcf;
          --accent-color: #ec008c;
          --highlight-color: #ffc700;
          --text-color: #2c3e50;
          --background-color: #ffffff;
          --card-background: #ffffff;
          --border-radius: 12px;
          --box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
          --transition: all 0.3s ease;
      }

      * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
      }

      body {
          font-family: 'Inter', sans-serif;
          background-color: var(--background-color);
          color: var(--text-color);
          line-height: 1.6;
      }

      .container {
          max-width: 100%;
          margin: auto;
          /*padding: 0 20px; !* Added padding on the sides *!*/
      }

      .dashboard-top {
          display: grid;
          grid-template-columns: 2fr 1fr;
          gap: 30px;
          margin-bottom: 40px;
          width: 100%; /* Ensures the dashboard takes up full width */
      }

      @media (max-width: 768px) {
          .dashboard-top {
              grid-template-columns: 1fr;
          }
      }

      .card {
          background-color: var(--card-background);
          border-radius: var(--border-radius);
          padding: 30px;
          box-shadow: var(--box-shadow);
          transition: var(--transition);
          width: 100%; /* Full width for cards */
      }

      .card:hover {
          transform: translateY(-5px);
          box-shadow: 0 6px 30px rgba(0, 0, 0, 0.15);
      }

      .summary {
          text-align: center;
      }

      /* Flex container to keep amounts side by side */
      .flex-amounts {
          display: flex;
          justify-content: center;
          align-items: baseline;
          gap: 10px;
          max-width: 100%; /* Ensures no overflow */
          white-space: nowrap; /* Prevents text wrapping */
          flex-shrink: 1; /* Allows shrinking if needed */
      }

      .amount {
          font-size: 3.5vw; /* Dynamic size based on viewport width */
          font-weight: 700;
          color: var(--primary-color);
      }

      .amount2 {
          font-size: 2.5vw; /* Dynamic size based on viewport width */
          font-weight: 700;
          color: var(--primary-color-dark);
          opacity: 0.5;
      }

      /* Ensures the amount doesn't become too small on very small screens */
      @media (max-width: 500px) {
          .amount {
              font-size: 24px; /* Minimum font size */
          }

          .amount2 {
              font-size: 18px; /* Minimum font size */
          }
      }

      .progress {
          width: 100%;
          height: 12px;
          background-color: var(--secondary-color);
          border-radius: 6px;
          overflow: hidden;
          margin-bottom: 20px;
      }

      .progress-bar {
          width: <%= @spent_percentage %>%;
          height: 100%;
          background-color: var(--accent-color);
          border-radius: 6px;
          transition: width 0.5s ease-in-out;
      }

      .button {
          display: inline-block;
          padding: 14px 28px;
          background-color: var(--highlight-color);
          color: #fff;
          text-decoration: none;
          border-radius: 30px;
          font-weight: 600;
          transition: var(--transition);
          border: none;
          cursor: pointer;
      }

      .button:hover {
          background-color: #ffa500;
          transform: translateY(-2px);
          box-shadow: 0 4px 15px rgba(255, 199, 0, 0.4);
      }

      h2, h3 {
          color: var(--text-color);
          font-weight: 600;
          margin-bottom: 10px;
      }

      #pieChart {
          max-width: 100%;
          max-height: 300px;
      }

      .chart-container {
          position: relative;
          height: 300px;
          width: 100%; /* Ensures chart container takes up full width */
      }

      .progress-info {
          display: flex;
          justify-content: space-between;
          font-size: 14px;
          color: var(--text-color);
          margin-bottom: 10px;
      }
  </style>
<% end %>

<div class="container">
  <div class="dashboard-top">
    <!-- Monthly Summary Card -->
    <div class="card">
      <div class="flex items-center justify-center mb-6">
        <div class="w-72 h-44 bg-gradient-to-br from-gray-700 via-gray-800 to-gray-900 rounded-xl shadow-2xl overflow-hidden relative">
          <div class="w-full h-full flex flex-col justify-between p-6 text-gray-100">
            <div class="flex justify-between items-start">
              <div class="flex flex-col">
                <span class="text-xs font-light text-gray-300">Card Number</span>
                <span class="text-xl font-mono tracking-wider">Ending 4242</span>
              </div>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
            </div>
            <div class="flex justify-between items-end">
              <div class="flex flex-col">
                <span class="text-xs font-light text-gray-300">Card Holder</span>
                <span class="text-lg font-semibold">JOHN DOE</span>
              </div>
              <div class="flex flex-col items-end">
                <span class="text-xs font-light text-gray-300">Expires</span>
                <span class="text-lg font-semibold">12/25</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="summary">
        <h2>Monthly Expenses Summary</h2>

        <!-- Flex container for side-by-side layout with responsive text scaling -->
        <div class="flex-amounts">
          <div class="amount"><%= number_to_currency(@total_expenses, precision: 2) %></div>
          <div class="amount2">/</div>
          <div class="amount2"><%= number_to_currency(@monthly_limit, precision: 2) %></div>
        </div>

        <div class="progress-info">
          <span>Spent: <%= @spent_percentage %>%</span>
          <span>Remaining: <%= number_to_currency(@remaining_funds, precision: 2) %></span>
        </div>
        <div class="progress">
          <div class="progress-bar"></div>
        </div>

        <!-- Add Expense button links to products_path -->
        <%= link_to "Add Expense", products_path, class: "button" %>
      </div>
    </div>

    <!-- Pie Chart Card -->
    <div class="card" data-controller="chart">
      <h3>Spending Breakdown</h3>
      <div class="chart-container">
        <canvas id="pieChart"></canvas>
      </div>
    </div>
  </div>
</div>

