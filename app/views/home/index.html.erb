<div class="max-w-7xl mx-auto p-6">
  <!-- Render Account Balance Partial -->
  <%= render 'account_balance' %>

  <!-- Active Rentals Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Active Rentals</h2>

    <!-- Active Rental Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @active_rentals.each do |rental| %>
        <% product = rental.product %>
        <div class="bg-gray-100 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-semibold text-gray-800"><%= product.name %></h3>
            <span class="text-lg font-medium text-gray-600"><%= number_to_currency(product.price, precision: 2, unit: "zÅ‚", format: "%n %u") %></span>
          </div>

          <!-- Mocking time left for rental purposes -->
          <% time_left = (Time.now + rand(1..30).days) %>
          <p class="text-gray-500 mt-2">Return in: <%= time_ago_in_words(time_left) %> left</p>

          <!-- Progress bar visualizing the time left -->
          <div class="w-full bg-gray-200 h-2 mt-2 rounded-full">
            <div class="bg-black h-2 rounded-full" style="width: <%= rand(30..100) %>%"></div>
          </div>

          <!-- Action buttons -->
          <div class="mt-4 flex space-x-2">
            <!-- Black button with white text -->
            <button class="bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800">Extend Rental</button>

            <!-- Black outlined button -->
            <button class="border border-black text-black px-4 py-2 rounded-lg hover:bg-gray-100">Return</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
