<div class="max-w-7xl mx-auto p-6">
  <!-- Search Form -->
  <div class="mb-6">
    <form action="<%= subscriptions_path %>" method="get" class="flex items-center space-x-4">
      <input
        type="text"
        name="query"
        placeholder="Search subscriptions..."
        value="<%= params[:query] %>"
        class="border-gray-300 rounded-lg p-2 w-full"
      >
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">
        Search
      </button>
    </form>
  </div>

  <!-- Tag Filter -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold">Filter by Tag:</h3>
    <div class="flex space-x-4 mt-2">
      <% @available_tags.each do |tag| %>
        <a href="<%= subscriptions_path(tag: tag) %>" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">
          <%= tag %>
        </a>
      <% end %>
      <a href="<%= subscriptions_path %>" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">
        Clear Filter
      </a>
    </div>
  </div>

  <!-- Subscription List -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @subscriptions.any? %>
      <% @subscriptions.each do |subscription| %>
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <h3 class="text-xl font-semibold text-gray-800"><%= subscription[:name] %></h3>
          <p class="text-lg text-gray-600">$<%= sprintf("%.2f", subscription[:cost]) %></p>
          <p class="text-gray-500 mt-2">Tags: <%= subscription[:tags].join(", ") %></p>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-600">No subscriptions found.</p>
    <% end %>
  </div>
</div>
