<header class="bg-gray-800 text-white py-4 shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between">

    <!-- Logo and App Name as a Button to Root -->
    <div class="flex items-center space-x-4">
      <%= link_to root_path, class: "flex items-center space-x-4" do %>
        <!-- Logo -->
        <img src="icon.svg" alt="The App Logo" class="h-10 w-10">
        <!-- App Name -->
        <h1 class="text-2xl font-bold">SubCard</h1>
      <% end %>
    </div>

    <!-- Hamburger button (visible on mobile) -->
    <button class="lg:hidden block text-white focus:outline-none" id="menu-toggle">
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>

    <!-- Navigation Links (hidden on mobile, visible on large screens) -->
    <nav class="hidden lg:flex space-x-4" id="menu">
      <a href="#" class="text-gray-300 hover:text-white">Investments</a>
      <a href="<%= subscriptions_path %>" class="text-gray-300 hover:text-white">Subscriptions</a>
      <a href="#" class="text-gray-300 hover:text-white">Contact</a>
      <a href="<%= partners_path %>" class="text-gray-300 hover:text-white">Partners</a>
    </nav>

    <!-- Button to toggle the card info dropdown -->
    <div class="relative">
      <button class="text-white focus:outline-none" id="card-toggle">
        <!-- Button icon (you can change this to any icon or text) -->
        <%= image_tag "drop-down-svgrepo-com.svg", alt: "Card Info", class: "h-8 w-8" %>
      </button>

      <!-- Render the card info dropdown from the partial (make it relative to the button) -->
      <%= render 'shared/card_info' %>
    </div>

    <!-- User Icon (visible on all devices) -->
    <div class="flex items-center">
      <%= link_to users_path, class: "block text-white focus:outline-none" do %>
        <!-- Use image_tag to load the custom SVG icon -->
        <%= image_tag "user-circle-svgrepo-com.svg", alt: "User Profile", class: "h-8 w-8" %>
      <% end %>
    </div>

  </div>

  <!-- Mobile Menu (initially hidden) -->
  <div class="lg:hidden" id="mobile-menu" style="display: none;">
    <nav class="space-y-2 px-4 py-2">
      <a href="#" class="block text-gray-300 hover:text-white">Investments</a>
      <a href="<%= subscriptions_path %>" class="block text-gray-300 hover:text-white">Subscriptions</a>
      <a href="#" class="block text-gray-300 hover:text-white">Contact</a>
      <a href="<%= partners_path %>" class="block text-gray-300 hover:text-white">Partners</a>
    </nav>
  </div>
</header>



<script>
  document.getElementById('menu-toggle').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.style.display = menu.style.display === 'none' || menu.style.display === '' ? 'block' : 'none';
  });

  document.getElementById('card-toggle').addEventListener('click', function() {
    const cardDropdown = document.getElementById('card-info-dropdown');
    cardDropdown.style.display = cardDropdown.style.display === 'none' ? 'block' : 'none';
  });
</script>
